<%- include('../includes/head.ejs') %>
<body>
  <%- include('../includes/header.ejs') %>
    <main>
          <div class="webSiteBody">
            <% prods.forEach((product) => { %>
            <div class="card__body">
              <h3 class="card__body__title"><%= product.title %></h3>
              <img src="<%= product.image %>" class="card__Box__Image">
              <h5><strong>Description: </strong><%= product.desc%></h5>
              <h5><strong>Price: </strong><%= product.price %></h5>
              <div class="box__card__action">

                <form action="/admin/delete-product" method="POST" class = "form__card__action">
                    <input type="hidden" name = "productId" value="<%=product.id%>">
                    <button class = "button__card__action" type="submit">Delete</button>
                </form>

                <a class = "button__card__action" href="/admin/edit-product/<%=product.id%>?edit=true">Edit</a>
              </div>
            </div>
            <% }) %>
          </div>
      </main>
</body>
</html>